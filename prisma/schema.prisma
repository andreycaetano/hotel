// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hotel {
  id            Int           @id @default(autoincrement())
  name          String        @db.VarChar(255)
  description   Description   @relation(fields: [descriptionId], references: [id], onDelete: Cascade)
  descriptionId Int          
  star          Int
  images        String[]      @default([])
  facilities    Facilities[]
  city          Cities        @relation(fields: [cityId], references: [id])
  cityId        Int
  condition     Conditions    @relation(fields: [conditionId], references: [id], onDelete: Cascade)
  conditionId   Int
  travelTime    TravelTime    @relation(fields: [travelTimeId], references: [id], onDelete: Cascade)
  travelTimeId   Int  
  sport         Sports[]
}

model Conditions {
  id            Int         @id @default(autoincrement())
  condition     String      @unique
  hotel         Hotel[]
}

model TravelTime {
  id              Int       @id @default(autoincrement())
  travelTime      String    @unique
  hotel           Hotel[]
}

model Sports {
  id    Int        @id @default(autoincrement())
  name  String     @unique
  hotel Hotel[]
}

model Facilities {
  id    Int         @id     @default(autoincrement())
  name  String
  icon  String
  hotel Hotel[]
}


model Country {
  id     Int      @id @default(autoincrement())
  name   String
  cities Cities[]
}

model Cities {
  id        Int     @id @default(autoincrement())
  name      String
  country   Country @relation(fields: [countryId], references: [id], onDelete: Cascade)
  countryId Int
  hotel     Hotel[]
}

model Description {
  id            Int     @id @default(autoincrement())
  comment       String
  destination   String
  accommodation String
  activities    String
  hotel         Hotel[]
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique @db.VarChar(255)
  password String @db.VarChar(255)
  email    String @unique @db.VarChar(255)
  role     String @default("user") @db.VarChar(255)
}